RewriteEngine On

# Block direct access to PHP files except index.php and login.php
<FilesMatch "\.(php)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Allow access to these specific files
<Files "index.php">
    Require all granted
</Files>

<Files "login.php">
    Require all granted
</Files>

<Files "proses_login.php">
    Require all granted
</Files>

<Files "logout.php">
    Require all granted
</Files>